{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "node": true,
    "jest/globals": true
  },
  "plugins": ["jest", "flowtype"],
  "extends": ["eslint:recommended", "plugin:flowtype/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", "tab"],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
